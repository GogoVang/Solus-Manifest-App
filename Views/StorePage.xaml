<UserControl x:Class="SolusManifestApp.Views.StorePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Store"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Search Bar and Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="16"
                     Padding="15"
                     Margin="0,0,10,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchGamesCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1"
                    Content="ðŸ” Search"
                    Command="{Binding SearchGamesCommand}"
                    Padding="30,10"/>
        </Grid>

        <!-- Status and Sort Options -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sort By:"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Button Content="ðŸ“… Recently Updated"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ChangeSortByCommand}"
                        CommandParameter="updated"
                        Padding="15,5"
                        Margin="0,0,10,0"/>

                <Button Content="ðŸ”¤ Alphabetical"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ChangeSortByCommand}"
                        CommandParameter="name"
                        Padding="15,5"
                        Margin="0,0,10,0"/>

                <Button Content="ðŸ”„ Load Library"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding LoadGamesCommand}"
                        Padding="15,5"/>
            </StackPanel>
        </StackPanel>

        <!-- Games Grid -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Games}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCardStyle}"
                                Width="280"
                                Height="350"
                                Margin="0,0,20,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="160"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Game Image -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        CornerRadius="8">
                                    <Grid>
                                        <!-- Show cached icon if available -->
                                        <Image Source="{Binding CachedIconPath}"
                                               Stretch="UniformToFill"
                                               Visibility="{Binding CachedIconPath, Converter={StaticResource NullToVisibilityConverter}}"/>

                                        <!-- Placeholder if no icon -->
                                        <TextBlock Text="ðŸŽ®"
                                                   FontSize="64"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   Visibility="{Binding CachedIconPath, Converter={StaticResource InverseNullToVisibilityConverter}}"/>

                                        <!-- Manifest Status Badge -->
                                        <Border Background="{DynamicResource AccentBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="8"
                                                Visibility="{Binding ManifestAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="âœ“ Available"
                                                       Foreground="White"
                                                       FontSize="10"
                                                       FontWeight="Bold"/>
                                        </Border>

                                        <Border Background="#CC666666"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="8"
                                                Visibility="{Binding ManifestAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <TextBlock Text="â³ Pending"
                                                       Foreground="White"
                                                       FontSize="10"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Game Info -->
                                <StackPanel Grid.Row="1" Margin="10">
                                    <TextBlock Text="{Binding GameName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"/>
                                    <TextBlock Text="{Binding GameId, StringFormat='App ID: {0}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding UploadedDate, StringFormat='Added: {0:MMM d, yyyy}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,3,0,0"/>
                                    <TextBlock Text="{Binding ManifestSize, StringFormat='Size: {0:N0} bytes', TargetNullValue='Size: Unknown'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,3,0,0"
                                               Visibility="{Binding ManifestAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Download Button -->
                                <Button Grid.Row="2"
                                        Content="â¬‡ï¸ Download"
                                        Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="10"
                                        IsEnabled="{Binding ManifestAvailable}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="â¬…ï¸ Previous Page"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    Padding="20,10"
                    FontSize="14"
                    Margin="0,0,10,0"/>

            <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0} of'}"
                       FontSize="14"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="10,0,5,0"/>

            <TextBlock Text="{Binding TotalPages}"
                       FontSize="14"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <Button Content="Next Page âž¡ï¸"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    Padding="20,10"
                    FontSize="14"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid Grid.Row="3"
              Grid.RowSpan="2"
              Background="#AA000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="â³"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
